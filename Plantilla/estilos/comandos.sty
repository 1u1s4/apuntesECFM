% Funciones trigonometricas inversas
\providecommand{\seni}[1]{\mathop{\rm sen^{-1}}\nolimits \ps{#1}} 
\providecommand{\cosi}[1]{\mathop{\rm cos^{-1}}\nolimits \ps{#1}}
\providecommand{\tani}[1]{\mathop{\rm tan^{-1}}\nolimits \ps{#1}}
\providecommand{\seci}[1]{\mathop{\rm sec^{-1}}\nolimits \ps{#1}}
\providecommand{\csci}[1]{\mathop{\rm csc^{-1}}\nolimits \ps{#1}}
\providecommand{\coti}[1]{\mathop{\rm cot^{-1}}\nolimits \ps{#1}}
% Potencias de funciones trigonometricas
\providecommand{\potsen}[2]{\mathop{\rm sen^{#2}}\nolimits \ps{#1}}
\providecommand{\potcos}[2]{\mathop{\rm cos^{#2}}\nolimits \ps{#1}}
\providecommand{\pottan}[2]{\mathop{\rm tan^{#2}}\nolimits \ps{#1}}
\providecommand{\potsec}[2]{\mathop{\rm sec^{#2}}\nolimits \ps{#1}}
\providecommand{\potcsc}[2]{\mathop{\rm csc^{#2}}\nolimits \ps{#1}}
\providecommand{\potcot}[2]{\mathop{\rm cot^{#2}}\nolimits \ps{#1}}
% Calcul
\providecommand{\limite}[4]{\lim_{#1  \to #2^{#4}}{#3}} % limite
\providecommand{\der}[3]{\frac{d^{#3} #1}{d #2^{#3}}} % derivada de orden n, si el tercer campo se deja vacio no agrega el exponente
\providecommand{\derpar}[3]{\frac{\partial^{#3} #1}{\partial #2^{#3}}} % derivada parcial de orden n, si el tercer campo se deja vacio no agrega el exponente
\newcommand{\integral}[4]{\int_{#1}^{#2}{#3}\; \text{d#4}} % integral
\providecommand{\intdoble}[7]{\int_{#1}^{#2}{\int_{#3}^{#4}{#5 \;\text{d#6} \;\text{d#7}}}} % integracion doble iterada
\providecommand{\gradiente}[1]{\nabla #1=\vc{\derpar{#1}{x}{},\derpar{#1}{y}{},\derpar{#1}{z}{}}} % gradiente de una funcion
% Diferencial total de una funcion
% 2 variables
\providecommand{\diftotdos}[3]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3}
% 3 variables
\providecommand{\diftottre}[4]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4}
% 4 variables
\providecommand{\diftotcua}[5]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4+\frac{\partial #1}{\partial #5}d #5}
% 5 variables
\providecommand{\diftotcin}[6]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4+\frac{\partial #1}{\partial #5}d #5+\frac{\partial #1}{\partial #6}d #6}
% 6 variables
\providecommand{\diftotsei}[7]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4+\frac{\partial #1}{\partial #5}d #5+\frac{\partial #1}{\partial #6}d #6+\frac{\partial #1}{\partial #7}d #7}
% 7 variables
\providecommand{\diftotsie}[8]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4+\frac{\partial #1}{\partial #5}d #5+\frac{\partial #1}{\partial #6}d #6+\frac{\partial #1}{\partial #7}d #7+\frac{\partial #1}{\partial #8}d #8}
% 8 variables
\providecommand{\diftotoch}[9]{\frac{\partial #1}{\partial #2}d #2+\frac{\partial #1}{\partial #3}d #3+\frac{\partial #1}{\partial #4}d #4+\frac{\partial #1}{\partial #5}d #5+\frac{\partial #1}{\partial #6}d #6+\frac{\partial #1}{\partial #7}d #7+\frac{\partial #1}{\partial #8}d #8+\frac{\partial #1}{\partial #9}d #9}
